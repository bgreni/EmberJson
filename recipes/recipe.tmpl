# yaml-language-server: $schema=https://raw.githubusercontent.com/prefix-dev/recipe-format/main/schema.json

context:
  version: "13.4.2"

package:
  name: {{NAME}}
  version: {{VERSION}}

source:
  - path: ../emberjson
  - path: ../{{LICENSE_FILE}}

build:
  script:
    - magic run mojo package . -o {{PREFIX}}/{{NAME}}.mojopkg

requirements:
  run:
{{DEPENDENCIES}}

about:
  homepage: {{HOMEPAGE}}
  license: {{LICENSE}}
  license_file: {{LICENSE_FILE}}
  summary: {{SUMMARY}}
  description: {{DESCRIPTION}}
  repository: {{REPOSITORY}}